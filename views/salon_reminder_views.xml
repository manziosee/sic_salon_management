<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="salon_reminder_view_form" model="ir.ui.view">
        <field name="name">salon.reminder.view.form</field>
        <field name="model">salon.reminder</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="send_reminder" string="Send Now" type="object" class="oe_highlight"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="recipient_id"/>
                            <field name="send_time"/>
                            <field name="method"/>
                        </group>
                        <group>
                            <field name="booking_id"/>
                            <field name="order_id"/>
                            <field name="sent"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Message">
                            <field name="message"/>
                        </page>
                        <page string="Activities">
                            <field name="activity_ids" widget="mail_activity"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="salon_reminder_view_tree" model="ir.ui.view">
        <field name="name">salon.reminder.view.tree</field>
        <field name="model">salon.reminder</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="recipient_id"/>
                <field name="send_time"/>
                <field name="method"/>
                <field name="sent"/>
            </tree>
        </field>
    </record>

    <record id="salon_reminder_action" model="ir.actions.act_window">
        <field name="name">Salon Reminders</field>
        <field name="res_model">salon.reminder</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>