<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="salon_booking_view_form" model="ir.ui.view">
        <field name="name">salon.booking.view.form</field>
        <field name="model">salon.booking</field>
        <field name="inherit_id" ref="salon_management.salon_booking_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="replace">
                <header>
                    <button name="action_confirm_booking" string="Confirm" type="object"
                            class="oe_highlight" attrs="{'invisible': [('state', '!=', 'new_request')]}"/>
                    <button name="action_start_ongoing" string="Start" type="object"
                            class="oe_highlight" attrs="{'invisible': [('state', '!=', 'confirmed')]}"/>
                    <button name="action_mark_done" string="Mark Done" type="object"
                            class="oe_highlight" attrs="{'invisible': [('state', '!=', 'ongoing')]}"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="new_request,confirmed,ongoing,done"
                           statusbar_colors='{"new_request":"blue", "confirmed":"orange", "ongoing":"green", "done":"purple"}'
                           options="{'clickable': '1'}"/>
                </header>
            </xpath>

            <xpath expr="//field[@name='service_ids']" position="after">
                <!-- Additional customization or removal logic -->
            </xpath>

            <xpath expr="//sheet" position="before">
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </xpath>
        </field>
    </record>

    <record id="salon_booking_view_tree" model="ir.ui.view">
        <field name="name">salon.booking.view.tree</field>
        <field name="model">salon.booking</field>
        <field name="inherit_id" ref="salon_management.salon_booking_view_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="attributes">
                <attribute name="decoration-info">state == 'new_request'</attribute>
                <attribute name="decoration-primary">state == 'confirmed'</attribute>
                <attribute name="decoration-success">state == 'ongoing'</attribute>
                <attribute name="decoration-muted">state == 'done'</attribute>
            </xpath>

            <xpath expr="//field[@name='state']" position="attributes">
                <attribute name="widget">badge</attribute>
            </xpath>
        </field>
    </record>
</odoo>
