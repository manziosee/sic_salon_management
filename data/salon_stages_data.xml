<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data noupdate="1">

    <record id="salon_stage_new_request" model="salon.stage">
      <field name="name">New Request</field>
      <field name="sequence">1</field>
      <field name="color">1</field> <!-- Red -->
    </record>

    <record id="salon_stage_confirmed" model="salon.stage">
      <field name="name">Confirmed</field>
      <field name="sequence">2</field>
      <field name="color">3</field> <!-- Yellow -->
    </record>

    <record id="salon_stage_ongoing" model="salon.stage">
      <field name="name">Ongoing</field>
      <field name="sequence">3</field>
      <field name="color">5</field> <!-- Blue -->
    </record>

    <record id="salon_stage_done" model="salon.stage">
      <field name="name">Done</field>
      <field name="sequence">4</field>
      <field name="color">10</field> <!-- Green -->
    </record>

  </data>
</odoo>